<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cjh.backend.mapper.OrdersMapper">

    <resultMap id="BaseResultMap" type="com.cjh.backend.entity.Orders">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="orderNo" column="order_no" jdbcType="VARCHAR"/>
            <result property="buyerId" column="buyer_id" jdbcType="BIGINT"/>
            <result property="sellerId" column="seller_id" jdbcType="BIGINT"/>
            <result property="totalPrice" column="total_price" jdbcType="DECIMAL"/>
            <result property="orderStatus" column="order_status" jdbcType="TINYINT"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,order_no,buyer_id,
        seller_id,total_price,order_status,
        is_deleted,create_time,update_time
    </sql>


    <update id="updateOrderStatus">
        update tradelens.orders
        set order_status = #{status},
            update_time = now()
        where id = #{id}
          and is_deleted = 0
    </update>

</mapper>
